<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_5dp"
    android:layout_marginLeft="@dimen/_10dp"
    android:layout_marginRight="@dimen/_10dp"
    android:layout_marginTop="@dimen/_5dp"
    android:layout_marginBottom="@dimen/_5dp"
    android:layout_height="110dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:text="Project"
                android:id="@+id/projectTV"
                android:paddingLeft="@dimen/_5dp"
                android:textSize="@dimen/_12sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:text="Project Name One"
                android:paddingLeft="@dimen/_5dp"
                android:id="@+id/projectNameTV"
                android:textSize="@dimen/_12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:text="Subject"
                android:id="@+id/subjectTV"
                android:textSize="@dimen/_12sp"
                android:textColor="@color/dark_green"
                android:paddingLeft="@dimen/_5dp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:text="Project Subject One"
                android:id="@+id/projectSubjectTV"
                android:lines="3"
                android:paddingLeft="@dimen/_5dp"
                android:maxLines="3"
                android:minLines="2"
                android:textSize="@dimen/_12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:text="Creation Date"
                android:id="@+id/creationDateTV"
                android:textSize="@dimen/_12sp"
                android:paddingLeft="@dimen/_5dp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:paddingLeft="@dimen/_5dp"
                android:text="23-10-2020"
                android:id="@+id/cdateTV"
                android:textSize="@dimen/_12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginLeft="@dimen/_10dp"
            android:layout_marginRight="@dimen/_10dp"
            android:layout_marginTop="@dimen/_5dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:text="Created By"
                android:paddingLeft="@dimen/_5dp"
                android:id="@+id/createdByTV"
                android:textSize="@dimen/_12sp"
                android:textColor="@color/dark_green"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:text="Sherry"
                android:id="@+id/createdNameTV"
                android:paddingLeft="@dimen/_5dp"
                android:textSize="@dimen/_12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>