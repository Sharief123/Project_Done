<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.highgo.project.activity.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="wrap_content"
                android:src="@drawable/ic_edit_black_24dp"
                android:layout_alignParentRight="true"
                android:id="@+id/editDetailsTV"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/ic_person_outline_black_24dp"
                android:id="@+id/coverPicIV"
                android:layout_height="match_parent"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="-20dp"
            android:layout_height="200dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/_20dp"
                android:layout_marginRight="@dimen/_20dp"
                android:id="@+id/cardView"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/_100dp"
                        android:layout_marginLeft="@dimen/_20dp"
                        android:id="@+id/profilePicCIV"
                        android:src="@drawable/ic_person_outline_black_24dp"
                        android:layout_height="@dimen/_100dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2"
                        android:paddingLeft="@dimen/_10dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:text="Sharief.Shaik"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/_18sp"
                            android:layout_height="0dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@android:color/darker_gray"
                            android:text="janisherry9666@gmail.com"
                            android:textSize="@dimen/_12sp"
                            android:layout_height="0dp"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:text="Full  Name"
            android:id="@+id/usernameTV"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Nagur Sharief.Shaik"
            android:id="@+id/shariefShaikTV"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@android:color/darker_gray"
            android:layout_height="0.5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Alternative Email"
            android:id="@+id/emailTV"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="janisherry9666@gmail.com"
            android:id="@+id/gmailTV"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@android:color/darker_gray"
            android:layout_height="0.5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Phone number"
            android:id="@+id/phoneNumberTV"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="6303411794"
            android:id="@+id/numberTV"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@android:color/darker_gray"
            android:layout_height="0.5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Department"
            android:id="@+id/departmentTV"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Manager"
            android:id="@+id/managerTV"
            android:textSize="@dimen/_15sp"
            android:textStyle="bold"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:background="@android:color/darker_gray"
            android:layout_height="0.5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Log Out"
            android:textStyle="bold"
            android:textSize="@dimen/_18sp"
            android:layout_marginBottom="@dimen/_20dp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
