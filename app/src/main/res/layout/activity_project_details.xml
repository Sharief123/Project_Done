<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_20dp"
    android:layout_height="match_parent"
    tools:context="com.highgo.project.activity.ProjectDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="Project Name"
            android:id="@+id/projectNameTV"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Project Management System"
            android:id="@+id/nameTV"
            android:textSize="@dimen/_15sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Project Description"
            android:id="@+id/projectDescriptionTV"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Project System is one of the key modules of SAP to perform project and portfolio management. It helps you to manage the project life cycle starting from structuring to planning, execution, until the project completion."
            android:id="@+id/descriptionTV"
            android:minLines="2"
            android:lines="5"
            android:maxLines="5"
            android:textSize="@dimen/_15sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Project Start Date"
            android:id="@+id/projectStartDateTV"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="23-10-2020"
            android:id="@+id/startDateTV"
            android:textSize="@dimen/_15sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Project End Date"
            android:id="@+id/projectEndDateTV"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="23-12-2020"
            android:id="@+id/endDateTV"
            android:textSize="@dimen/_15sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Project Assigned By "
            android:id="@+id/projectAssignedByTV"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Manager"
            android:id="@+id/assignedBYTV"
            android:textSize="@dimen/_15sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Project Assigned To"
            android:id="@+id/projectAssignedToTV"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_15dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Team A"
            android:id="@+id/assignedToTV"
            android:textSize="@dimen/_15sp"
            android:textColor="@android:color/darker_gray"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:text="Project Progress"
            android:id="@+id/projectProgressTV"
            android:textSize="@dimen/_18sp"
            android:textColor="@color/dark_green"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginLeft="@dimen/_15sp"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            android:layout_width="@dimen/_70dp"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginTop="@dimen/_8dp"
            android:layout_height="@dimen/_70dp">

            <ProgressBar
                android:layout_width="@dimen/_60dp"
                android:id="@+id/projectProgressBarPB"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:background="@drawable/pb_background"
                android:layout_centerInParent="true"
                android:progressDrawable="@drawable/pb_drawable"
                android:layout_height="@dimen/_60dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:text="76%"
                android:id="@+id/progressBarData"
                android:textSize="@dimen/_15sp"
                android:textColor="@android:color/darker_gray"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="List Of Tasks"
                android:id="@+id/listOfTasksTV"
                android:textColor="@color/dark_green"
                android:layout_marginLeft="@dimen/_15dp"
                android:textSize="@dimen/_18sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20dp"
                android:id="@+id/addNewTaskIV"
                android:src="@drawable/ic_add_box_black_24dp"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:id="@+id/listOfTasksRecyclerView"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:weightSum="1"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:orientation="horizontal"
            android:layout_height="@dimen/_50dp">

            <Button
                android:layout_width="0dp"
                android:text="Back"
                android:layout_weight="0.5"
                android:id="@+id/BackBN"
                android:layout_marginRight="@dimen/_10dp"
                android:background="@drawable/cancel_background"
                android:textColor="@color/white"
                android:layout_height="@dimen/_40dp"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:text="Update"
                android:layout_marginLeft="@dimen/_10dp"
                android:id="@+id/updateBN"
                android:layout_alignParentRight="true"
                android:background="@drawable/save_background"
                android:textColor="@color/white"
                android:layout_height="@dimen/_40dp"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/_20dp"
            android:layout_marginRight="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:id="@+id/saveBN"
            android:background="@drawable/save_background"
            android:text="Save"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sp"
            android:layout_height="@dimen/_40dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
